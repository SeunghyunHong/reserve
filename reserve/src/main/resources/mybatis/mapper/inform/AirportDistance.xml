<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.narratage.reserve.inform.dao.AirportDistanceDao">
<cache />

	<select id="get" resultType="double" parameterMap="hashmap">
		SELECT DISTANCE
		  FROM AIRPORT_DISTANCE
		 WHERE      FIRST_AIRPORT=${firstAirport}
		      AND SECOND_AIRPORT=${secondAirport}
	</select>
	
	<insert id="add" parameterType="Airport">
		INSERT INTO AIRPORT_DISTANCE(
		   first_airport
		  ,second_airport
		  ,distance
		) VALUES (
		  ,${firstAirport}
		  ,${secondAirport}
		  ,${distance}
		)			
	</insert>
</mapper>